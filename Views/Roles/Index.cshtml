@{
ViewData["Title"] = "Rol Sayfası";
}

@model IEnumerable<AppRole>

    <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Create">Rol Yarat</a>

    <style>
        .table-container {
            margin: auto;
            width: 80%;
            overflow-x: auto;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        td:nth-child(odd) {
            background-color: #f2f2f2;
        }

        td:nth-child(even) {
            background-color: #e6e6e6;
        }

        .btn {
            text-decoration: none;
            margin-right: 5px;
            padding: 8px 12px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            color: #fff;
            background-color: #007bff;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .nav-link {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            margin-bottom: 10px;
            display: inline-block;
            padding: 8px 12px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .nav-link:hover {
            background-color: #e6f2ff;
        }
    </style>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
                }
            </tbody>
        </table>
    </div>